                    app:srcCompat="@drawable/flying" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_figthing"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="FIGTHING"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/fighting" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_fairy"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="FAIRY"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/fairy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_dragon"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="DRAGON"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="10dp"
