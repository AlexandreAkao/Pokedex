                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="FIRE"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
